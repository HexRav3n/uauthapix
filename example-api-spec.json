{
  "openapi": "3.0.0",
  "info": {
    "title": "Example API",
    "version": "1.0.0",
    "description": "Sample API specification for UauthAPIX testing"
  },
  "servers": [
    {
      "url": "https://api.example.com/v1",
      "description": "Production server"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Get all users",
        "description": "Retrieve a list of all users (requires authentication)",
        "responses": {
          "200": {
            "description": "Successful response"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "post": {
        "summary": "Create a new user",
        "description": "Create a new user account (requires admin)",
        "responses": {
          "201": {
            "description": "User created"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "summary": "Get user by ID",
        "description": "Retrieve a specific user (requires authentication)",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "put": {
        "summary": "Update user",
        "description": "Update user information (requires authentication)",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User updated"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "delete": {
        "summary": "Delete user",
        "description": "Delete a user (requires admin)",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "User deleted"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/admin/dashboard": {
      "get": {
        "summary": "Admin dashboard",
        "description": "Access admin dashboard (requires admin role)",
        "responses": {
          "200": {
            "description": "Dashboard data"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - admin access required"
          }
        }
      }
    },
    "/admin/settings": {
      "get": {
        "summary": "Get admin settings",
        "description": "Retrieve admin settings (requires admin)",
        "responses": {
          "200": {
            "description": "Settings retrieved"
          }
        }
      },
      "post": {
        "summary": "Update admin settings",
        "description": "Update admin settings (requires admin)",
        "responses": {
          "200": {
            "description": "Settings updated"
          }
        }
      }
    },
    "/public/health": {
      "get": {
        "summary": "Health check",
        "description": "Public health check endpoint",
        "responses": {
          "200": {
            "description": "Service is healthy"
          }
        }
      }
    },
    "/public/version": {
      "get": {
        "summary": "API version",
        "description": "Get API version information",
        "responses": {
          "200": {
            "description": "Version info"
          }
        }
      }
    },
    "/api/data": {
      "get": {
        "summary": "Get data",
        "description": "Retrieve data (authentication required)",
        "responses": {
          "200": {
            "description": "Data retrieved"
          }
        }
      }
    },
    "/api/sensitive": {
      "get": {
        "summary": "Get sensitive data",
        "description": "Retrieve sensitive information (authentication required)",
        "responses": {
          "200": {
            "description": "Sensitive data"
          }
        }
      }
    }
  }
}
